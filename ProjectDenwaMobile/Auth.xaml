<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectDenwaMobile.Auth">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Black">
            <Label Text="Sign In" TextColor="White" FontSize="28" HorizontalOptions="CenterAndExpand" Margin="40"/>
            <StackLayout Margin="0, 100, 0, 0">
                <Entry x:Name="email" Placeholder="Email" PlaceholderColor="LightGray"/>
                <Entry x:Name="password" IsPassword="True" Placeholder="Password" PlaceholderColor="LightGray"/>
            </StackLayout>
            <StackLayout Margin="0, 50, 0, 0">
                <Button Text="SIGN IN" Clicked="AuthButton_Clicked" BackgroundColor="Black" BorderColor="White" BorderWidth="1"/>
                <Button Text="Create account" Clicked="SignUpButton_Clicked" HeightRequest="35" HorizontalOptions="EndAndExpand" BackgroundColor="Black" FontSize="10"/>
            </StackLayout>
            <Button Text="HOME" Clicked="HomeButton_Clicked" BackgroundColor="Black" BorderColor="White" BorderWidth="1" HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>